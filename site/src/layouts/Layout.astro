---
import ThemeSwitcher from '../components/ThemeSwitcher';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Interactive Dashboard for Building Custom AI Models' } = Astro.props;
const currentPath = Astro.url.pathname;
const baseUrl = import.meta.env.BASE_URL;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/demo', label: 'Demo' },
  { href: '/statistics', label: 'Statistics' },
  { href: '/discussions', label: 'Discussions' },
  { href: '/development-board', label: 'Dev Board' },
  { href: '/create-issue', label: 'Create Issue' },
  { href: '/docs', label: 'Docs' },
  { href: '/visualizer', label: 'Visualizer' },
];

// Generate breadcrumbs from path
const pathSegments = currentPath
  .replace(baseUrl, '')
  .split('/')
  .filter(Boolean);
const breadcrumbs = [
  { label: 'Home', href: baseUrl || '/' },
  ...pathSegments.map((segment, index) => ({
    label: segment.charAt(0).toUpperCase() + segment.slice(1).replace(/-/g, ' '),
    href: baseUrl + '/' + pathSegments.slice(0, index + 1).join('/'),
  })),
];

// Last deploy info (will be replaced by CI)
const lastDeploy = new Date().toISOString();
const shortSha = 'dev-local';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | GPT Builder</title>
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}/favicon.svg`} />
  </head>
  <body>
    <a href="#main-content" class="skip-to-content">
      Skip to content
    </a>

    <!-- Navbar -->
    <div class="navbar bg-base-200 shadow-lg sticky top-0 z-50">
      <div class="navbar-start">
        <div class="dropdown">
          <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h8m-8 6h16"
              />
            </svg>
          </div>
          <ul
            tabindex="0"
            class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-300 rounded-box w-52"
          >
            {navLinks.map((link) => (
              <li>
                <a
                  href={baseUrl + link.href}
                  class={currentPath === baseUrl + link.href ? 'active' : ''}
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
        <a href={baseUrl + '/'} class="btn btn-ghost text-xl">
          ðŸ¤– GPT Builder
        </a>
      </div>
      <div class="navbar-center hidden lg:flex">
        <ul class="menu menu-horizontal px-1">
          {navLinks.map((link) => (
            <li>
              <a
                href={baseUrl + link.href}
                class={currentPath === baseUrl + link.href ? 'active' : ''}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      <div class="navbar-end">
        <ThemeSwitcher client:load />
        <a
          href="https://github.com/cywf/gpt-builder"
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-ghost btn-circle"
          aria-label="GitHub Repository"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="currentColor"
          >
            <path
              d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
            />
          </svg>
        </a>
      </div>
    </div>

    <!-- Breadcrumb -->
    {breadcrumbs.length > 1 && (
      <div class="bg-base-200 px-4 py-2 text-sm">
        <nav aria-label="Breadcrumb" class="container mx-auto">
          {breadcrumbs.map((crumb, index) => (
            <span class="breadcrumb-item">
              {index === breadcrumbs.length - 1 ? (
                <span class="opacity-70">{crumb.label}</span>
              ) : (
                <a href={crumb.href} class="link link-hover">
                  {crumb.label}
                </a>
              )}
            </span>
          ))}
        </nav>
      </div>
    )}

    <!-- Main Content -->
    <main id="main-content" class="container mx-auto px-4 py-8 min-h-screen">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="footer footer-center p-10 bg-base-200 text-base-content">
      <aside>
        <p class="font-bold">
          GPT Builder
        </p>
        <p>
          <a
            href="https://github.com/cywf/gpt-builder/blob/main/LICENSE"
            target="_blank"
            rel="noopener noreferrer"
            class="link link-hover"
          >
            MIT License
          </a>
        </p>
        <p class="text-sm opacity-70">
          Last deployed: <time datetime={lastDeploy}>{new Date(lastDeploy).toLocaleString()}</time>
          <span class="mx-2">â€¢</span>
          SHA: <code class="text-xs">{shortSha}</code>
        </p>
      </aside>
      <nav>
        <div class="grid grid-flow-col gap-4">
          <a
            href="https://github.com/cywf/gpt-builder"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              class="fill-current"
            >
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              />
            </svg>
          </a>
        </div>
      </nav>
    </footer>

    <script is:inline>
      // Initialize theme on page load (before hydration)
      (function() {
        const defaultTheme = 'nightfall';
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme) {
          document.documentElement.setAttribute('data-theme', savedTheme);
        } else {
          document.documentElement.setAttribute('data-theme', defaultTheme);
        }
      })();
    </script>
  </body>
</html>
