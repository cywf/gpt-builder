---
import Layout from '../layouts/Layout.astro';

const baseUrl = import.meta.env.BASE_URL;
---

<Layout title="404 - Page Not Found">
  <div class="min-h-[60vh] flex items-center justify-center">
    <div class="text-center space-y-6">
      <div class="text-9xl font-bold text-primary">404</div>
      <h1 class="text-4xl font-bold">Page Not Found</h1>
      <p class="text-xl opacity-70">
        The page you're looking for doesn't exist or has been moved.
      </p>
      
      <div class="flex gap-4 justify-center flex-wrap mt-8">
        <a href={baseUrl + '/'} class="btn btn-primary">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-5 h-5 mr-2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25"
            />
          </svg>
          Go Home
        </a>
        <a href={baseUrl + '/demo'} class="btn btn-outline">
          Try Demo
        </a>
        <a href={baseUrl + '/docs'} class="btn btn-outline">
          View Docs
        </a>
      </div>

      <div class="mt-12">
        <h2 class="text-2xl font-bold mb-4">Quick Links</h2>
        <div class="flex gap-2 justify-center flex-wrap">
          <a href={baseUrl + '/statistics'} class="link link-hover">Statistics</a>
          <span class="opacity-50">•</span>
          <a href={baseUrl + '/discussions'} class="link link-hover">Discussions</a>
          <span class="opacity-50">•</span>
          <a href={baseUrl + '/development-board'} class="link link-hover">Dev Board</a>
          <span class="opacity-50">•</span>
          <a href={baseUrl + '/visualizer'} class="link link-hover">Visualizer</a>
        </div>
      </div>
    </div>
  </div>
</Layout>
