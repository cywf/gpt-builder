---
import Layout from '../layouts/Layout.astro';
import LanguageChart from '../components/LanguageChart';
import CommitChart from '../components/CommitChart';
import { readFile } from 'node:fs/promises';
import { join } from 'node:path';

const baseUrl = import.meta.env.BASE_URL;

// Load stats data
let stats: any = {
  stars: 0,
  forks: 0,
  watchers: 0,
  openIssues: 0,
  languages: {},
  commits: { weeks: [], total: 0 },
};

try {
  const statsPath = join(process.cwd(), 'public', 'data', 'stats.json');
  const statsContent = await readFile(statsPath, 'utf-8');
  stats = JSON.parse(statsContent);
} catch (error) {
  console.error('Failed to load stats:', error);
}
---

<Layout title="Statistics">
  <div class="space-y-6">
    <div>
      <h1 class="text-4xl font-bold mb-2">ðŸ“Š Repository Statistics</h1>
      <p class="text-lg opacity-70">
        Real-time metrics and insights from the GPT Builder repository
      </p>
    </div>

    <!-- Stats Cards -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4">
      <div class="stats shadow bg-base-200">
        <div class="stat">
          <div class="stat-figure text-primary">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              class="inline-block w-8 h-8 stroke-current"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"
              />
            </svg>
          </div>
          <div class="stat-title">Stars</div>
          <div class="stat-value text-primary">{stats.stars}</div>
          <div class="stat-desc">GitHub stargazers</div>
        </div>
      </div>

      <div class="stats shadow bg-base-200">
        <div class="stat">
          <div class="stat-figure text-secondary">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              class="inline-block w-8 h-8 stroke-current"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"
              />
            </svg>
          </div>
          <div class="stat-title">Forks</div>
          <div class="stat-value text-secondary">{stats.forks}</div>
          <div class="stat-desc">Repository forks</div>
        </div>
      </div>

      <div class="stats shadow bg-base-200">
        <div class="stat">
          <div class="stat-figure text-accent">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              class="inline-block w-8 h-8 stroke-current"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
              />
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
              />
            </svg>
          </div>
          <div class="stat-title">Watchers</div>
          <div class="stat-value text-accent">{stats.watchers}</div>
          <div class="stat-desc">Watching this repo</div>
        </div>
      </div>

      <div class="stats shadow bg-base-200">
        <div class="stat">
          <div class="stat-figure text-info">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              class="inline-block w-8 h-8 stroke-current"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              />
            </svg>
          </div>
          <div class="stat-title">Open Issues</div>
          <div class="stat-value text-info">{stats.openIssues}</div>
          <div class="stat-desc">Need attention</div>
        </div>
      </div>
    </div>

    <!-- Charts -->
    <div class="grid md:grid-cols-2 gap-6">
      <!-- Language Distribution -->
      <div class="card bg-base-200 shadow-xl">
        <div class="card-body">
          <div class="h-64">
            <LanguageChart client:load languages={stats.languages} />
          </div>
        </div>
      </div>

      <!-- Commit Activity -->
      <div class="card bg-base-200 shadow-xl">
        <div class="card-body">
          <div class="h-64">
            <CommitChart client:load weeks={stats.commits.weeks} />
          </div>
        </div>
      </div>
    </div>

    <!-- Additional Info -->
    <div class="alert alert-info">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        class="stroke-current shrink-0 w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
        />
      </svg>
      <div>
        <div class="text-sm">
          Statistics are updated during each deployment. Last updated: {
            stats.updatedAt ? new Date(stats.updatedAt).toLocaleString() : 'N/A'
          }
        </div>
      </div>
    </div>
  </div>
</Layout>
